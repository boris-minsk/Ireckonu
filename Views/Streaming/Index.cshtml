@model Ireckonu.Models.Upload
@{
    ViewData["Title"] = "Upload files";
}

<h2>Upload file</h2>
<div ng-app="myApp">
    <div ng-controller="myCtrl">
        <ul>
            <li id="errorMessages" class="error" data-ng-repeat="e in errors">
                {{e}}
            </li>
        </ul>
        <div>
            <div>
                <label for="FilePath">File to upload</label>
                <div>
                    <input name="FilePath" type="file" file-model="filePath" />
                </div>
            </div>
            <br />
            <div>
                <button ng-click="uploadFile()">UploadFile</button>
            </div>
            <br />
            <div ng-show="showUploadStatus">
                <b><span ng-bind="uploadStatus"></span></b>
            </div>
            <div ng-show="showUploadedData">
                <b>File Id:</b> <span ng-bind="uploadedData.fileId"></span>
                <b>File path:</b> <span ng-bind="uploadedData.filePath"></span>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src="~/js/app.js"></script>
}